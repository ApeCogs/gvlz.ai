---
export interface Props {
  title?: string;
  description?: string;
}

const { title = "Gabriel Velazquez Lopez's Blog", description = "Personal blog about technology, programming, and thoughts" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <title>{title}</title>
    <link rel="alternate" type="application/atom+xml" title="GVLZ.ai - Atom Feed" href="/atom/everything.xml" />
    <link href="https://github.com/gvlz" rel="me" />
    <slot name="head" />
  </head>
  <body>
    <div id="post-header">
      <div class="header-inner">
        <a href="/" class="site-title">Gabriel Velazquez Lopez's Blog</a>
      </div>
    </div>

    <div id="wrapper">
      <div id="post-content">
        <slot name="content" />
      </div>
      <div id="post-sidebar">
        <slot name="sidebar" />
      </div>
    </div>

    <style is:global>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif;
        line-height: 1.6;
        color: #333;
        background: #fff;
      }

      a {
        color: #720e9e;
        text-decoration: none;
      }

      a:hover {
        text-decoration: underline;
      }

      #post-header {
        background: linear-gradient(to top, #720e9e, #a855f7);
        padding: 0.4rem 0;
        margin-bottom: 2rem;
      }

      .header-inner {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
      }

      .site-title {
        color: white;
        font-size: 1rem;
        font-weight: normal;
        text-decoration: none;
      }

      .site-title:hover {
        text-decoration: none;
        opacity: 0.9;
      }

      #wrapper {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem 3rem;
        display: grid;
        grid-template-columns: 1fr 300px;
        gap: 3rem;
      }

      #post-content {
        font-size: 1.1rem;
        line-height: 1.7;
        min-width: 0;
      }

      #post-sidebar {
        padding-top: 2rem;
      }

      #post-content h1 {
        font-size: 2rem;
        margin-bottom: 1rem;
        font-weight: normal;
        color: #333;
      }

      #post-content h2 {
        font-size: 1.5rem;
        margin: 2rem 0 1rem;
        font-weight: 600;
        color: #333;
      }

      #post-content h3 {
        font-size: 1.3rem;
        margin: 1.5rem 0 0.75rem;
        font-weight: 600;
        color: #333;
      }

      #post-content p {
        margin-bottom: 1rem;
      }

      #post-content ul, #post-content ol {
        margin-bottom: 1rem;
        padding-left: 2rem;
      }

      #post-content li {
        margin-bottom: 0.5rem;
      }

      #post-content blockquote {
        border-left: 3px solid #720e9e;
        padding-left: 1rem;
        margin: 1.5rem 0;
        font-style: italic;
        color: #666;
      }

      #post-content pre {
        background: #f4f4f4;
        padding: 1rem;
        border-radius: 4px;
        overflow-x: auto;
        margin-bottom: 1rem;
      }

      #post-content code {
        background: #f4f4f4;
        padding: 0.2rem 0.4rem;
        border-radius: 3px;
        font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', monospace;
        font-size: 0.9em;
      }

      #post-content pre code {
        background: none;
        padding: 0;
      }

      .post-meta {
        color: #666;
        font-size: 0.95rem;
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid #e0e0e0;
      }

      .post-meta time {
        font-style: italic;
      }

      .post-tags {
        margin-top: 2rem;
        padding-top: 1rem;
        border-top: 1px solid #e0e0e0;
      }

      .post-tags .tag {
        display: inline-block;
        padding: 0.25rem 0.75rem;
        background: #f0f0f0;
        border-radius: 20px;
        margin-right: 0.5rem;
        margin-bottom: 0.5rem;
        color: #333;
        text-decoration: none;
        font-size: 0.9rem;
      }

      .post-tags .tag:hover {
        background: #e0e0e0;
      }

      @media (max-width: 768px) {
        #wrapper {
          padding: 0 1rem 2rem;
          grid-template-columns: 1fr;
        }

        #post-content {
          font-size: 1rem;
        }

        #post-sidebar {
          display: none;
        }

        .site-title {
          font-size: 1.2rem;
        }
      }
    </style>
  </body>
</html>